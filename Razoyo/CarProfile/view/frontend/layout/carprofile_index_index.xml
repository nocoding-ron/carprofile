<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <css src="Razoyo_CarProfile::css/styles.css"/>
    </head>
    <referenceBlock name="page.main.title">
        <action method="setPageTitle">
            <argument translate="true" name="title" xsi:type="string">My Car</argument>
        </action>
    </referenceBlock>
    <body>
        <referenceContainer name="content">
            <block class="Razoyo\CarProfile\Block\CarForm" name="razoyo_carprofile_form" template="Razoyo_CarProfile::form.phtml"/>
        </referenceContainer>
    </body>
</page>
